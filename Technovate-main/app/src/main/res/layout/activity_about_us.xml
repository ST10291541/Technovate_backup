<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/primary"
                app:title="About Us"
                style="@style/Widget.Material3.Toolbar" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal">

                <!-- CHOC Logo -->
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/choc_logo2"
                    android:contentDescription="CHOC Logo"
                    android:layout_marginTop="16dp"
                    android:adjustViewBounds="true" />

                <!-- "What is CHOC ?" -->
                <TextView
                    android:id="@+id/tvWhatIsChocTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What is CHOC ?"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2056B1"
                    android:layout_marginTop="24dp" />

                <!-- Description -->
                <TextView
                    android:id="@+id/tvWhatIsChoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Loading..."
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvWhereWeKeepHope"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvRegionsDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000" />


                <!-- Founder Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/choc_founder"
                    android:layout_marginTop="32dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="CHOC Founder" />

                <!-- Founder Note -->
                <TextView
                    android:id="@+id/tvFounderNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp" />

                <!-- CHOC Programmes Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CHOC Programmes:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2056B1"
                    android:layout_marginTop="32dp" />

                <!-- Programmes Grid Layout -->
                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:columnCount="2"
                    app:rowCount="4"
                    app:alignmentMode="alignMargins"
                    app:columnOrderPreserved="false"
                    android:padding="8dp"
                    tools:ignore="MissingClass">


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_gravity="fill"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Housing"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#2056B1"
                                android:drawablePadding="6dp"
                                android:drawableStart="@drawable/ic_accommodation" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Safe housing near treatment centers for families during their child's cancer treatment."
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="6dp"
                                android:lineSpacingMultiplier="1.2" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Transport Programme -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_gravity="fill"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Transport"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#2056B1"
                                android:drawablePadding="6dp"
                                android:drawableStart="@drawable/ic_transport" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Transportation services to ensure children can attend medical appointments and treatments."
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="6dp"
                                android:lineSpacingMultiplier="1.2" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Emotional Support Programme -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_gravity="fill"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Emotional Support"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#2056B1"
                                android:drawablePadding="6dp"
                                android:drawableStart="@drawable/ic_emotional_support" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Counseling and support services for children and families coping with cancer diagnosis and treatment."
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="6dp"
                                android:lineSpacingMultiplier="1.2" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Practical Support Programme -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_gravity="fill"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Practical Support"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#2056B1"
                                android:drawablePadding="6dp"
                                android:drawableStart="@drawable/ic_practical_support" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Assistance with daily needs including meals, household tasks, and navigating the healthcare system."
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="6dp"
                                android:lineSpacingMultiplier="1.2" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Awareness & Advocacy Programme -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_gravity="fill"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Awareness and Advocacy"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#2056B1"
                                android:drawablePadding="6dp"
                                android:drawableStart="@drawable/ic_awareness" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Raising public awareness about childhood cancer and advocating for policies that support affected families."
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="6dp"
                                android:lineSpacingMultiplier="1.2" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Education Programme -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_gravity="fill"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Education"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#2056B1"
                                android:drawablePadding="6dp"
                                android:drawableStart="@drawable/ic_education" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Educational resources and support to help children continue learning during treatment and recovery."
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="6dp"
                                android:lineSpacingMultiplier="1.2" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Get Involved Programme -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_gravity="fill"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Get Involved"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#2056B1"
                                android:drawablePadding="6dp"
                                android:drawableStart="@drawable/ic_get_involved" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Opportunities for volunteers, donors, and partners to support CHOC's mission and make a difference."
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="6dp"
                                android:lineSpacingMultiplier="1.2" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Collaboration Programme -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_gravity="fill"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Collaboration"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#2056B1"
                                android:drawablePadding="6dp"
                                android:drawableStart="@drawable/ic_collaboration" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Partnerships with healthcare providers, organizations, and communities to enhance support services."
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="6dp"
                                android:lineSpacingMultiplier="1.2" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.gridlayout.widget.GridLayout>

                <!-- Padding bottom for spacing -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />

                <!-- Gold Ribbon -->
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="start"
                android:layout_marginTop="24dp"
                android:contentDescription="Gold Ribbon"
                android:src="@drawable/gold_ribbon_new" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/fabContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:gravity="right"
            android:padding="12dp"
            android:elevation="6dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="Go to Dashboard"
                app:srcCompat="@drawable/bot_face"
                android:backgroundTint="#87CEFA"
                app:tint="@android:color/white" />
        </LinearLayout>



    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>