<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.CHOCUI" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Force white text in night mode -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

        <!-- Optional: ensure icons and toolbar text are also white -->
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:colorControlActivated">@color/white</item>
    </style>

</resources>
